<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MarcarJogo">

    <EditText
        android:id="@+id/et_nomeTimeID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Nome do time"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/et_dataPartidaID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Data da partida"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/et_localPartidaID"
        app:layout_constraintStart_toStartOf="@+id/et_localPartidaID"
        app:layout_constraintTop_toBottomOf="@+id/et_localPartidaID" />

    <EditText
        android:id="@+id/et_horarioPartidaID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="HorÃ¡rio da partida"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="@+id/et_dataPartidaID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_dataPartidaID"
        app:layout_constraintTop_toBottomOf="@+id/et_dataPartidaID" />

    <Button
        android:id="@+id/btn_SalvarPartidaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:background="@drawable/btnrounded"
        android:text="Agendar Partida"
        app:layout_constraintEnd_toEndOf="@+id/et_horarioPartidaID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_horarioPartidaID"
        app:layout_constraintTop_toBottomOf="@+id/et_horarioPartidaID" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Agendar Partida"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_localPartidaID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Local da partida"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_nomeTimeID"
        app:layout_constraintStart_toStartOf="@+id/et_nomeTimeID"
        app:layout_constraintTop_toBottomOf="@+id/et_nomeTimeID" />

</android.support.constraint.ConstraintLayout>